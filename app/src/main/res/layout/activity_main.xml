<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical" >

    <EditText android:id="@+id/edit_message_a"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_message_adr"/>

    <EditText android:id="@+id/edit_message_c"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_msg_city"/>

    <EditText android:id="@+id/edit_message_s"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_msg_state"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="Find the Distance to a Second Location"/>

    <EditText android:id="@+id/edit_message_a1"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Address1"/>

    <EditText android:id="@+id/edit_message_c1"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="City1"/>

    <EditText android:id="@+id/edit_message_s1"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="2-Letter State Code1"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/button_send"
        android:onClick="sendMessage"/>
</LinearLayout>

