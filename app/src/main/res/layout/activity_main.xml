<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical" >

    <EditText android:id="@+id/edit_message_a"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_message_adr"/>

    <EditText android:id="@+id/edit_message_c"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_msg_city"/>

    <EditText android:id="@+id/edit_message_s"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="@string/edit_msg_state"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/button_send"
        android:onClick="sendMessage"/>
</LinearLayout>

